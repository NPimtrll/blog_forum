<% content_for :title, "Editing comment" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing comment</h1>

  <%= render partial: "comments/form", locals: { comment: @comment, post: @post } %>

  <%= link_to "Show this comment", post_comment_path(@post, @comment), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to post", post_path(@post), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
