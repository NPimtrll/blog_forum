

<div class="container mx-auto px-4 py-2">
  <%= render "shared/breadcrumb" %>  
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Your Bookmarks</h1>

  <% if @bookmarked_posts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @bookmarked_posts.each do |post| %>
        <%= render "posts/components/article_card", post: post %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">You haven't bookmarked any articles yet.</p>
      <%= link_to "Browse Articles", root_path, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  <% end %>
</div> 