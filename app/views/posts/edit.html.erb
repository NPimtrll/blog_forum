<% content_for :title, "Editing post" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-screen-xl mx-auto px-4">
    <div class="max-w-4xl mx-auto mb-8">
      <h1 class="text-3xl font-bold mb-2">Edit Article</h1>
      <p class="text-gray-600">Update your article content</p>
    </div>

    <%= render "form", post: @post %>

    <%= link_to "Show this post", @post, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to posts", posts_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
</div>
