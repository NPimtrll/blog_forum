<% content_for :title, @post.title %>

<div class="max-w-4xl mx-auto px-4">
  <%= render "shared/breadcrumb", post: @post %>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-4xl font-bold mb-6"><%= @post.title %></h1>

  <div class="flex items-center space-x-3 mb-6">
    <div class="flex items-center">
      <% if @post.user.avatar.attached? %>
        <%= image_tag url_for(@post.user.avatar), class: "w-10 h-10 rounded-full border-2 border-gray-200" %>
      <% else %>
        <%= image_tag "default-avatar.png", class: "w-10 h-10 rounded-full border-2 border-gray-200" %>
      <% end %>
      <div class="ml-3">
        <p class="font-medium text-gray-900"><%= @post.user.username %></p>
        <p class="text-gray-500 text-sm"><%= @post.user.role || "Tech Journalist" %></p>
      </div>
    </div>
    <span class="text-gray-300">â€¢</span>
    <time class="text-gray-500 text-sm"><%= @post.created_at.strftime("%B %d, %Y") %></time>
  </div>

  <div class="prose prose-lg max-w-none mb-8">
    <%= sanitize @post.content %>
  </div>

  <div class="flex items-center space-x-6 mb-8">
    <div class="flex items-center space-x-2">
      <% if @post.likes.exists?(user: current_user) %>
        <%= button_to post_likes_path(@post), method: :post, class: "flex items-center space-x-1 text-blue-600" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
          <span><%= @post.likes.count %> Likes</span>
        <% end %>
      <% else %>
        <%= button_to post_likes_path(@post), method: :post, class: "flex items-center space-x-1 text-gray-600 hover:text-blue-600" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" class="w-5 h-5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
          <span><%= @post.likes.count %> Likes</span>
        <% end %>
      <% end %>
    </div>

    <div class="flex items-center space-x-2 text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" class="w-5 h-5" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
      </svg>
      <span><%= @post.comments.count %> Comments</span>
    </div>

    <div class="flex items-center space-x-2 text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" class="w-5 h-5" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      <span><%= @post.views %> Views</span>
    </div>

    <div class="flex-grow"></div>

    <div class="flex items-center space-x-4">
      <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= @post.title %>" target="_blank" class="text-gray-600 hover:text-blue-400">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
        </svg>
      </a>
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="text-gray-600 hover:text-blue-600">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
      </a>
      <button onclick="copyToClipboard('<%= request.original_url %>')" class="text-gray-600 hover:text-blue-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
        </svg>
      </button>
    </div>
  </div>

  <% if @post.user == current_user %>
    <div class="flex space-x-4 mb-8">
      <%= link_to "Edit this post", edit_post_path(@post), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-md text-gray-600" %>
      <%= button_to "Delete this post", @post, method: :delete, class: "px-4 py-2 bg-red-100 hover:bg-red-200 rounded-md text-red-600", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>

  <div class="border-t pt-8">
    <h2 class="text-2xl font-bold mb-6">Comments (<%= @post.comments.count %>)</h2>

    <div class="space-y-6 mb-8">
      <% @post.comments.each do |comment| %>
        <div class="flex space-x-4">
          <% if comment.user.avatar.attached? %>
            <%= image_tag url_for(comment.user.avatar), class: "w-10 h-10 rounded-full" %>
          <% else %>
            <%= image_tag "default-avatar.png", class: "w-10 h-10 rounded-full" %>
          <% end %>

          <div class="flex-grow">
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-center justify-between mb-2">
                <div>
                  <span class="font-medium text-gray-900"><%= comment.user.username %></span>
                  <span class="text-gray-500 text-sm ml-2"><%= time_ago_in_words(comment.created_at) %> ago</span>
                </div>
                <% if comment.user == current_user %>
                  <div class="flex items-center space-x-2">
                    <%= button_to "Edit", edit_post_comment_path(@post, comment), method: :get, class: "text-sm text-gray-500 hover:text-gray-700" %>
                    <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, class: "text-sm text-red-500 hover:text-red-700", data: { confirm: "Are you sure?" } %>
                  </div>
                <% end %>
              </div>
              <p class="text-gray-700"><%= comment.content %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-semibold mb-4">Add a comment</h3>
      <%= form_with model: [@post, @post.comments.new], local: true, class: "space-y-4" do |form| %>
        <div class="flex space-x-4">
          <% if current_user&.avatar&.attached? %>
            <%= image_tag url_for(current_user.avatar), class: "w-10 h-10 rounded-full" %>
          <% else %>
            <%= image_tag "default-avatar.png", class: "w-10 h-10 rounded-full" %>
          <% end %>
          <div class="flex-grow">
            <%= form.text_area :content, rows: 3, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Write a comment..." %>
          </div>
        </div>
        <%= form.submit "Post Comment", class: "mt-3 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(() => {
    alert('Link copied to clipboard!');
  }).catch(err => {
    console.error('Failed to copy text: ', err);
  });
}
</script>
