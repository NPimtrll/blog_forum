      <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 10" class="flex items-center justify-center"> <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 2l4 3-4 3"/>
      </svg>
      <span class="sr-only">Next</span>
    <% end %>
  </div>
</div>