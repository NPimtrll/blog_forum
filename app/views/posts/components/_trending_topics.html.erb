<div class="bg-white rounded-2xl shadow-md p-6" data-testid="trending-topics-container">
    <h2 class="text-xl font-bold text-gray-800 mb-4" data-testid="trending-topics-title">Trending Topics</h2>

    <% if @trending_tags.present? %>
        <div class="space-y-2" data-testid="trending-tags-list">
        <% @trending_tags.each_with_index do |tag, index| %>
            <% tag_colors = ["text-blue-600", "text-purple-600", "text-green-600", "text-yellow-600", "text-red-600"] %>
            <% tag_color = tag_colors[index % tag_colors.size] %> 

            <div class="flex items-center justify-between hover:bg-gray-100 p-2 rounded-md transition-colors duration-200" data-testid="trending-tag-<%= tag.id %>">
            <%= link_to "##{tag.name}", tagged_posts_path(tag_id: tag.id), class: "text-sm font-bold #{tag_color} hover:underline", data: { testid: "trending-tag-link-#{tag.id}" } %>
            <span class="text-sm text-gray-500" data-testid="trending-tag-post-count-<%= tag.id %>"><%= tag.post_count %> articles</span>
            </div>
        <% end %>
        </div>
    <% else %>
        <p class="text-gray-500" data-testid="loading-text">Loading...</p>
    <% end %>
</div>
