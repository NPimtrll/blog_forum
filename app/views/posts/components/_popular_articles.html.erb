<div class="bg-white p-6 rounded-3xl shadow-lg mt-10" data-testid="popular-articles-container">
  <div class="flex items-center justify-between mb-6" data-testid="popular-articles-header">
    <h2 class="text-2xl font-bold text-gray-800" data-testid="popular-articles-title">Popular Articles</h2>
    <%= link_to "View All", popular_posts_path, class: "text-blue-600 hover:underline text-sm font-semibold", data: { testid: "view-all-link" } %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6" data-testid="popular-articles-grid">
    <% @popular_posts.each do |post| %>
      <%= render partial: "posts/components/article_card", locals: { post: post }, data: { testid: "popular-article-card-#{post.id}" } %>
    <% end %>
  </div>
</div>
