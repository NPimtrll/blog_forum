<div class="w-full pb-10 pl-10 pr-10" data-testid="posts-index-container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render 'posts/components/main_article', data: { testid: 'main-article' } %>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8" data-testid="posts-grid-container">
    <div class="lg:col-span-2" data-testid="main-articles-section">
      <%= render 'posts/components/popular_articles', data: { testid: 'popular-articles' } %>
      <%= render 'posts/components/lastest_articles', data: { testid: 'latest-articles' } %>    
    </div>
    <%= render 'posts/components/sidebar', data: { testid: 'sidebar' } %>
  </div>
</div>
