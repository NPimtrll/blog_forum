<nav class="flex items-center text-gray-600 text-sm mb-4">
  <% if !local_assigns[:post] %>
    <span class="text-gray-800">Home</span>
  <% else %>
    <%= link_to "Home", root_path, class: "hover:text-blue-600" %>
    <% if post.category.present? %>
      <span class="mx-2">/</span>
      <span class="text-gray-800"><%= post.category.name %></span>
    <% end %>
  <% end %>
</nav> 