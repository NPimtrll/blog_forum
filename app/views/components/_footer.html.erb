<footer class="bg-white mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and Description -->
      <div class="col-span-1">
        <h2 class="text-blue-600 text-2xl font-bold mb-4">ODDSTalk:)</h2>
        <p class="text-gray-600">Your go-to platform for discovering and sharing knowledge through engaging articles.</p>
      </div>

      <!-- Quick Links -->
      <div class="col-span-1">
        <h3 class="text-gray-900 font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-3">
          <%= link_to "About Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
          <%= link_to "Write for Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
          <%= link_to "Contact", "#", class: "block text-gray-600 hover:text-gray-900" %>
          <%= link_to "Careers", "#", class: "block text-gray-600 hover:text-gray-900" %>
        </ul>
      </div>

      <!-- Legal -->
      <div class="col-span-1">
        <h3 class="text-gray-900 font-semibold mb-4">Legal</h3>
        <ul class="space-y-3">
          <%= link_to "Privacy Policy", "#", class: "block text-gray-600 hover:text-gray-900" %>
          <%= link_to "Terms of Service", "#", class: "block text-gray-600 hover:text-gray-900" %>
          <%= link_to "Cookie Policy", "#", class: "block text-gray-600 hover:text-gray-900" %>
        </ul>
      </div>

      <!-- Follow Us -->
      <div class="col-span-1">
        <h3 class="text-gray-900 font-semibold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
            <i class="fab fa-twitter text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
            <i class="fab fa-facebook text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
            <i class="fab fa-instagram text-xl"></i>
          <% end %>
          <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
            <i class="fab fa-linkedin text-xl"></i>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-200 mt-12 pt-8 text-center">
      <p class="text-gray-600">&copy; <%= Time.current.year %> ODDSTalk. All rights reserved.</p>
    </div>
  </div>
</footer> 